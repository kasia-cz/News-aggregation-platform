@model NewsPlatform.Application.DTOs.NewsDTOs.ReturnNewsDTO;

<h2>@Model.Title</h2>
<p><strong>Author:</strong> @Model.Author</p>
<p><strong>Publish Date:</strong> @Model.PublishTime.ToString("d")</p>

<h3>Description</h3>
<div>@Html.Raw(Model.Description)</div>

<h3>Content</h3>
<div>@Html.Raw(Model.Content)</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "News")" class="btn btn-secondary">Back to List</a>
</div>

<style>
    .news-item h2 {
        font-size: 2em;
        margin-top: 20px;
    }

    .news-item h3 {
        font-size: 1.5em;
        margin-top: 15px;
    }

    .news-content img {
        max-width: 100%;
        height: auto;
    }
</style>